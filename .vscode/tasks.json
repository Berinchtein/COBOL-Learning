{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build COBOL program",
            "type": "shell",
            "command": "cobc",
            "args": [
                "-x", // Create executable
                "${file}" // Current file
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run COBOL program",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}